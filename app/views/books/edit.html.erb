<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>
  <div class="create_box">
    <label class="create_box_title">Title</label>
    <%= f.text_field :title %>
  </div>

  <div class="create_box_body">
    <label class="create_box_body">Body</label>
    <%= f.text_area :body %>
  </div>

  <div class="create_box">
    <%= f.submit 'Update Book' %>
  </div>

<p class="p_link_to">
  <%= link_to "Show", book_path(@book.id) %>
  |
  <%= link_to "Back", books_path %>
</p>


<% end %>